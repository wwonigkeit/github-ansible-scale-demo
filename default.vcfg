[[program]]
  binary = "/bin/nginx"
  args = "-c /etc/nginx/nginx.conf"
  #args = "-V"
  bootstrap = ["FIND_AND_REPLACE find=ETH_CARD_0 replace=$EXT_IP0 file=/etc/nginx/conf.d/default.conf"]
  privilege = "superuser"

[[network]]
  ip = "dhcp"
  tcp = ["80","443"]
  mtu = 9001

[system]
  filesystem = "xfs"

[vm]
  cpus = 1
  ram = "256 MiB"
  disk-size = "+32 MiB"
